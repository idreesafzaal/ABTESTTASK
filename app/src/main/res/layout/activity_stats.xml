<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VIEWS.StatsActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvDeviceNum"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="SAVE YOUR DATA HERE"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvDeviceNum"
                android:id="@+id/tvexpOne"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="SAVE YOUR DATA HERE"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvexpOne"
                android:id="@+id/tvexpTwo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="SAVE YOUR DATA HERE"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvexpTwo"
                android:id="@+id/tvexpThree"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="SAVE YOUR DATA HERE"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>